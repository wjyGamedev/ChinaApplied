/* pages/sign/sign.wxss */

.container {
  width: 100%;
  height: 100%;
}

.picker {
  width: 96%;
  height: 100%;
  display: flex;
  padding: 2%;
}

.table {
  width: 100%;
  height: 100%;
  border: 0px solid darkgray;
  font-size: 16px;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #e6f3f9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #36f;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
